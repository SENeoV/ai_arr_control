# AI Arr Control Configuration
# ============================================
# Copy this file to .env in the project root and fill in your actual values
# All fields marked [REQUIRED] must be configured for the application to run
# Fields marked [OPTIONAL] have sensible defaults

# APPLICATION SETTINGS
# ============================================
APP_NAME=AI Arr Control
# Enable debug mode for verbose logging (use only for development)
DEBUG=false

# RADARR SERVICE (Movie Indexer Management) [REQUIRED]
# URL: Point to your Radarr instance
# Examples: http://radarr:7878, http://192.168.1.100:7878, http://radarr.example.com
# Note: Must include http:// or https://, no trailing slash
RADARR_URL=http://radarr:7878
# API Key: From Radarr Settings -> General -> Security -> API Key
# The key must be a valid 32-character string from your Radarr instance
RADARR_API_KEY=your_radarr_api_key_here

# SONARR SERVICE (TV Show Indexer Management) [REQUIRED]
# URL: Point to your Sonarr instance
# Examples: http://sonarr:8989, http://192.168.1.100:8989, http://sonarr.example.com
SONARR_URL=http://sonarr:8989
# API Key: From Sonarr Settings -> General -> Security -> API Key
SONARR_API_KEY=your_sonarr_api_key_here

# PROWLARR SERVICE (Unified Indexer Manager) [REQUIRED]
# URL: Point to your Prowlarr instance (required but may have limited use currently)
# Examples: http://prowlarr:9696, http://192.168.1.100:9696, http://prowlarr.example.com
PROWLARR_URL=http://prowlarr:9696
# API Key: From Prowlarr Settings -> General -> Security -> API Key
PROWLARR_API_KEY=your_prowlarr_api_key_here

# DATABASE CONFIGURATION [OPTIONAL]
# Defaults to SQLite in the db/ directory for development/small deployments
# For production deployments with multiple instances, use PostgreSQL or MySQL:
# 
# PostgreSQL example:
#   DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_arr_control
# 
# MySQL example:
#   DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/ai_arr_control
# 
# SQLite (default):
#   DATABASE_URL=sqlite+aiosqlite:///./db/app.db
#
# Note: For PostgreSQL/MySQL, create the database manually first:
#   createdb ai_arr_control  # PostgreSQL
#   CREATE DATABASE ai_arr_control;  # MySQL
DATABASE_URL=sqlite+aiosqlite:///./db/app.db

# INDEXER DISCOVERY (OPTIONAL)
# Enable automated discovery from remote sources (default false)
# Set to true to enable discovery; DISCOVERY_SOURCES contains URLs to fetch
# discovery data from (comma-separated URLs or JSON list)
DISCOVERY_ENABLED=false

# Comma-separated list of discovery source URLs
# Format: https://example.com/indexers.json or https://example.com/list.txt
# Each source should return either:
#   - JSON array of indexer objects: [{"name": "...", ...}, ...]
#   - Newline-separated indexer definitions
# Example with multiple sources:
#   DISCOVERY_SOURCES=https://indexer-list1.example.com/indexers.json,https://indexer-list2.example.com/list.txt
DISCOVERY_SOURCES=

# Interval (in hours) for running discovery checks when scheduled (default 24)
DISCOVERY_INTERVAL_HOURS=24

# If true, discovered indexers will be automatically POSTed to Prowlarr via its API
# This requires a valid PROWLARR_URL and PROWLARR_API_KEY
DISCOVERY_ADD_TO_PROWLARR=false

# ADVANCED SETTINGS [OPTIONAL]
# These settings are rarely needed and have good defaults

# Health check cache TTL in seconds (default 300 = 5 minutes)
# Increases performance by caching health check results within this window
# HEALTH_CHECK_CACHE_TTL_SECONDS=300

# Maximum number of health check results to store in memory cache
# HEALTH_CHECK_CACHE_MAX_ENTRIES=10000

# Enable database connection pooling (for PostgreSQL/MySQL)
# SQLALCHEMY_POOL_SIZE=5
# SQLALCHEMY_MAX_OVERFLOW=10

# Log file path (optional, logs go to console by default)
# LOG_FILE=ai_arr_control.log

# Request timeout for external API calls (in seconds, default 30)
# REQUEST_TIMEOUT_SECONDS=30

